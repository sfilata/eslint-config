{
  "name": "eslint-config-sfilata",
  "version": "0.1.6",
  "type": "module",
  "description": "Sfilata's ESLint configuration",
  "homepage": "https://github.com/sfilata/eslint-config",
  "packageManager": "pnpm@8.3.1",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --clean --dts",
    "stub": "tsup src/index.ts --format esm",
    "dev": "tsup src/index.ts --format esm,cjs --watch & eslint-flat-config-viewer",
    "lint": "pnpm run stub && eslint .",
    "test": "vitest"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "keywords": [
    "eslint-config"
  ],
  "author": "sfilata <sfilata@hotmail.com> (https://github.com/sfilata/)",
  "license": "MIT",
  "peerDependencies": {
    "eslint": ">=8.0.0",
    "typescript": ">=3.9"
  },
  "dependencies": {
    "@stylistic/eslint-plugin": "^0.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint-config-flat-gitignore": "^0.1.1",
    "eslint-plugin-antfu": "1.0.0-beta.12",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-i": "^2.28.1",
    "eslint-plugin-jsdoc": "^46.8.2",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-sort-keys": "^2.3.5",
    "eslint-plugin-unicorn": "^48.0.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "eslint-plugin-vue": "^9.15.1",
    "globals": "^13.23.0",
    "local-pkg": "^0.5.0",
    "vue-eslint-parser": "^9.3.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "1.0.0-beta.28",
    "@antfu/eslint-define-config": "1.23.0-2",
    "@types/eslint": "^8.44.6",
    "@types/fs-extra": "^11.0.3",
    "@types/node": "^20.8.7",
    "execa": "^8.0.1",
    "fast-glob": "^3.3.1",
    "fs-extra": "^11.1.1",
    "tsup": "^7.2.0",
    "typescript": "^5.1.6",
    "vitest": "^0.34.6"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
